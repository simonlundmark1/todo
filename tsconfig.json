{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false, // Ändrad till false för att tillåta filgenerering
    // Ta bort 'moduleResolution': 'bundler' om du inte använder en specifik bundler som kräver detta
    "isolatedModules": true
  },
  "include": ["src/**/*"]
}
